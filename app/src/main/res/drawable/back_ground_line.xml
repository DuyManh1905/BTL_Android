<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Nền màu xám nhạt -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Màu nền -->
        </shape>
    </item>

    <!-- Đường viền gạch chân ở cuối -->
    <item android:gravity="bottom">
        <shape android:shape="rectangle">
            <size android:height="2dp" /> <!-- Độ dày của đường viền -->
            <solid android:color="@color/green" /> <!-- Màu xanh -->
        </shape>
    </item>

</layer-list>
