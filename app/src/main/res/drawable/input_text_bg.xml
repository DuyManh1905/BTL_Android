<!-- res/drawable/bgr.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/green_background" />
            <stroke android:width="2dp" android:color="@color/gray_background" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/gray_background" />
            <stroke android:width="3dp" android:color="@color/green_background" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
