<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/company_cover1"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_marginTop="-50dp"
                android:layout_gravity="center"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/company3"
                app:shapeAppearanceOverlay="@style/RoundedImageView"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/tvJobName"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="25sp"
                android:gravity="center"
                android:text="Kỹ sư lập trình nhúng Assembly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/tvCompanyName"
                android:textColor="@color/gray"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"
                android:text="Công ty cổ phần MDM Việt Nam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:background="@color/gray_background"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/rounded_border_2"
                    android:layout_width="100dp"
                    android:layout_height="120dp">
                    <ImageView
                        android:paddingTop="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:paddingTop="8dp"
                        android:text="Mức lương"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:paddingTop="10dp"
                        android:id="@+id/tvMucLuong"
                        android:textColor="@color/green"
                        android:text="20 - 30 triệu"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/rounded_border_2"
                    android:layout_width="100dp"
                    android:layout_height="120dp">
                    <ImageView
                        android:paddingTop="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:paddingTop="8dp"
                        android:text="Địa điểm"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:paddingTop="10dp"
                        android:id="@+id/tvDiachi"
                        android:textColor="@color/green"
                        android:text="Hà Nội"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/rounded_border_2"
                    android:layout_width="100dp"
                    android:layout_height="120dp">
                    <ImageView
                        android:paddingTop="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:paddingTop="8dp"
                        android:text="Kinh nghiệm"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:paddingTop="10dp"
                        android:id="@+id/tvKinhnghiem"
                        android:textColor="@color/green"
                        android:text="> 5 năm"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:background="@color/gray_background"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <!-- ID -->

            <LinearLayout
                android:paddingBottom="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginBottom="10dp"
                    android:text="Thông tin chung"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginTop="4dp"
                        android:src="@drawable/ic_kinh_nghiem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_marginStart="15dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Kinh nghiệm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tvKinhnghiem2"
                            android:textStyle="bold"
                            android:text="> 5 năm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginTop="4dp"
                        android:src="@drawable/ic_hinh_thuc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_marginStart="15dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Hình thức"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tvHinhThuc"
                            android:textStyle="bold"
                            android:text="Toàn thời gian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginTop="4dp"
                        android:src="@drawable/ic_so_luong_tuyen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_marginStart="15dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Số lương tuyển"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tvSoLuongTuyen"
                            android:textStyle="bold"
                            android:text="15 người"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginTop="4dp"
                        android:src="@drawable/ic_gioi_tinh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_marginStart="15dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Giới tính"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tvGioiTinh"
                            android:textStyle="bold"
                            android:text="Không yêu cầu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginTop="4dp"
                        android:src="@drawable/ic_cap_bac"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_marginStart="15dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Cấp bậc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tvCapBac"
                            android:textStyle="bold"
                            android:text="Nhân viên"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginTop="4dp"
                        android:src="@drawable/ic_han_nop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_marginStart="15dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Hạn nộp hồ sơ"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tvHanNop"
                            android:textStyle="bold"
                            android:text="22/11/2024"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>



            <TextView
                android:id="@+id/tvTitleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mô tả công việc"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingTop="8dp"
                android:paddingBottom="4dp" />
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job description goes here" />

            <!-- Salary -->
            <TextView
                android:id="@+id/tvSalaryLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yêu cầu ứng  viên"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingTop="8dp"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/tvYeuCau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salary amount" />

            <!-- Start Date -->
            <TextView
                android:id="@+id/tvStartAtLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quyền lợi"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingTop="8dp"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/tvQuyenLoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start date" />

            <!-- End Date -->
            <TextView
                android:id="@+id/tvEndAtLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa điểm làm việc"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingTop="8dp"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/tvDiaDiemLamViec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hà Nội: Số 11-A1, KĐT Đại Kim, Định Công, Hoàng Mai" />

            <!-- Company Information -->
            <TextView
                android:id="@+id/tvCompanyLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời gian làm việc"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingTop="8dp"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/tvCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thứ 2 - Thứ 6 (từ 08:00 đến 17:30)\nSáng thứ 7, 8h-12h" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:background="@android:color/white">
        <ImageView
            android:layout_width="58dp"
            android:src="@drawable/round_bookmark_border_24"
            android:layout_height="50dp"/>
        <Button
            android:id="@+id/btnApply"
            android:textColor="@color/white"
            android:background="@drawable/normal_button_green"
            android:text="Ứng tuyển ngay"
            android:layout_width="310dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
