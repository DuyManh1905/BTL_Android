<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="3dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:background="@drawable/rounded_border"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgCompany"
                android:layout_marginTop="15dp"
                android:src="@drawable/company2"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
            <LinearLayout
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/job_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Job Title"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />


                <TextView
                    android:id="@+id/company_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Company Name"
                    android:textSize="20sp"
                    android:textColor="@color/green"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="6dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginTop="3dp"
                        android:padding="2dp"
                        android:src="@drawable/ic_location"
                        android:layout_width="18dp"
                        android:layout_height="18dp"/>
                    <TextView
                        android:id="@+id/jobAddress"
                        android:padding="2dp"
                        android:background="@color/gray_background"
                        android:text="Hà Nội"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginTop="7dp"
                            android:padding="2dp"
                            android:src="@drawable/ic_money"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>
                        <TextView
                            android:padding="2dp"
                            android:id="@+id/job_salary"
                            android:layout_marginTop="5dp"
                            android:background="@color/green_background"
                            android:text="8 - 15 triệu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:paddingStart="40dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginTop="7dp"
                            android:padding="2dp"
                            android:src="@drawable/ic_time"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>
                        <TextView
                            android:background="@color/green_background"
                            android:layout_weight="1"
                            android:padding="2dp"
                            android:id="@+id/job_end_date"
                            android:layout_marginTop="5dp"
                            android:text="05/11/2024"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_weight="1"
                android:src="@drawable/baseline_attachment_24"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/xemCongTy"
                android:layout_marginEnd="20dp"
                android:background="@color/green_background"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="50dp">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/ic_company"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <TextView
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    android:textSize="16sp"
                    android:textColor="@color/green"
                    android:layout_gravity="center"
                    android:text="Xem công ty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/xemCV"
                android:background="@color/gray_background"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="50dp">
                <TextView
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:text="Xem lại CV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
