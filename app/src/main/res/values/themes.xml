<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BTL" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Thay đổi màu chính -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green</item>
        <item name="colorAccent">@color/green</item>

        <!-- Màu nền cho ActionBar -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- Tùy chỉnh riêng ActionBar -->
    <style name="MyActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/green</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <!-- Tùy chỉnh văn bản tiêu đề -->
    <style name="MyActionBarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item> <!-- Quan trọng: căn giữa -->
        <item name="android:textSize">20sp</item> <!-- Kích thước tùy chỉnh -->
    </style>


    <style name="Base.Theme.BTL2" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="Theme.BTL" parent="Base.Theme.BTL" />
    <style name="RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item> <!-- Đặt giá trị bán kính bo góc -->
    </style>
</resources>